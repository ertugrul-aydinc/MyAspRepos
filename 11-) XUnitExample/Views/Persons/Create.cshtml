@{
    ViewBag.Title = "Create Person";
}

<a href="~/persons/index" class="link-hover">Back to Persons List</a>

<h2>Create Person</h2>

<div class="w-50">
    <form action="~/persons/create" method="post">

        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" for="PersonName">Person Name</label>
            </div>
            <div class="flex-1">
                <input type="text" id="PersonName" name="PersonName" class="form-input" />
            </div>
        </div>


        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label" for="Email">Email</label>
            </div>
            <div class="flex-1">
                <input type="email" id="Email" name="Email" class="form-input" />
            </div>
        </div>


        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label" for="DateOfBirth">Date Of Birth</label>
            </div>
            <div class="flex-1">
                <input type="date" id="Email" name="DateOfBirth" class="form-input" />
            </div>
        </div>


        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label" for="Email">Gender</label>
            </div>
            <div class="flex-1">
                <input class="ml" type="radio" id="Male" name="Gender" value="Male" />
                <label for="Male">Male</label>
                <input class="ml" type="radio" id="Female" name="Gender" value="Female" />
                <label for="Female">Female</label>
                <input class="ml" type="radio" id="Other" name="Gender" value="Other" />
                <label for="Other">Other</label>
            </div>
        </div>


        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label" for="CountryID">Country</label>
            </div>
            <div class="flex-1">
                <select name="CountryID" id="CountryID" class="form-input">
                    <option value="">Select Country</option>
                    @foreach (CountryResponse country in ViewBag.Countries)
                    {
                        <option value="@country.CountryID">@country.CountryName</option>
                    }
                </select>
            </div>
        </div>


        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label" for="Address">Address</label>
            </div>
            <div class="flex-1">
                <textarea type="date" id="Address" name="Address" class="form-input"></textarea>
            </div>
        </div>


        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <input type="checkbox" value="true" name="ReceiveNewsLetters" id="ReceiveNewsLetters" />
                <label for="ReceiveNewsLetters" class="form-label">Receive News Letters</label>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-green-back">Create</button>

                @if (ViewBag.Errors is not null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>

    </form>
</div>